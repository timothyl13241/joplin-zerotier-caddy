# Joplin DB
POSTGRES_PASSWORD=joplinpass
POSTGRES_USER=joplin
POSTGRES_DATABASE=joplin
POSTGRES_PORT=5432

# Joplin app base URL (internal hostname that resolves to your ZeroTier IP)
APP_BASE_URL=https://joplin.internal.example.com

# Transcribe service (optional)
TRANSCRIBE_ENABLED=0
TRANSCRIBE_API_KEY=change-me
QUEUE_DATABASE_NAME=joplin_transcribe
QUEUE_DATABASE_USER=joplin_transcribe
QUEUE_DATABASE_PASSWORD=joplintranscribepass
QUEUE_DATABASE_PORT=5433

# Path on host for transcribe images (optional)
HTR_CLI_IMAGES_FOLDER=/opt/joplin/transcribe-images
